# Fastfile for Skredvarsel (iVarsom)
# https://docs.fastlane.tools

default_platform(:ios)

# Use absolute paths to ensure metadata is found correctly
FASTLANE_DIR = File.expand_path(File.dirname(__FILE__))
METADATA_IOS = File.join(FASTLANE_DIR, "metadata_ios")
METADATA_OSX = File.join(FASTLANE_DIR, "metadata_osx")
SCREENSHOTS_IOS = File.join(FASTLANE_DIR, "screenshots_ios")
SCREENSHOTS_OSX = File.join(FASTLANE_DIR, "screenshots_osx")

platform :ios do
  desc "Download existing metadata from App Store Connect"
  lane :download_metadata do
    sh("cd .. && fastlane deliver download_metadata --use_live_version true --force true")
  end

  desc "Upload metadata to App Store Connect (without submitting)"
  lane :upload_metadata do
    deliver(
      metadata_path: METADATA_IOS,
      skip_binary_upload: true,
      skip_screenshots: true,
      skip_metadata: false,
      force: true,
      precheck_include_in_app_purchases: false,
      submit_for_review: false
    )
  end

  desc "Upload metadata to macOS App Store Connect"
  lane :upload_metadata_mac do
    deliver(
      platform: "osx",
      metadata_path: METADATA_OSX,
      skip_binary_upload: true,
      skip_screenshots: true,
      skip_metadata: false,
      force: true,
      precheck_include_in_app_purchases: false,
      submit_for_review: false
    )
  end

  desc "Upload metadata to both iOS and macOS App Store Connect"
  lane :upload_metadata_all do
    upload_metadata
    upload_metadata_mac
  end

  desc "Preview metadata changes (dry run)"
  lane :preview_metadata do
    deliver(
      metadata_path: METADATA_IOS,
      skip_binary_upload: true,
      skip_screenshots: true,
      skip_metadata: false,
      force: false,
      precheck_include_in_app_purchases: false,
      submit_for_review: false
    )
  end

  desc "Upload screenshots to App Store Connect"
  lane :upload_screenshots do
    deliver(
      screenshots_path: SCREENSHOTS_IOS,
      skip_binary_upload: true,
      skip_screenshots: false,
      skip_metadata: true,
      force: true,
      precheck_include_in_app_purchases: false,
      submit_for_review: false
    )
  end

  desc "Upload screenshots to macOS App Store Connect"
  lane :upload_screenshots_mac do
    deliver(
      platform: "osx",
      screenshots_path: SCREENSHOTS_OSX,
      skip_binary_upload: true,
      skip_screenshots: false,
      skip_metadata: true,
      force: true,
      precheck_include_in_app_purchases: false,
      submit_for_review: false
    )
  end

  desc "Upload screenshots to both iOS and macOS App Store Connect"
  lane :upload_screenshots_all do
    upload_screenshots
    upload_screenshots_mac
  end

  desc "Submit the current build for review"
  lane :submit_for_review do
    deliver(
      metadata_path: METADATA_IOS,
      skip_binary_upload: true,
      skip_screenshots: true,
      skip_metadata: false,
      submit_for_review: true,
      precheck_include_in_app_purchases: false,
      automatic_release: false
    )
  end
end
